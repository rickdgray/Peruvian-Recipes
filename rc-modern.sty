\RequirePackage{fontspec}
\setsansfont[Ligatures=TeX, BoldFont=Fira Sans Medium,Scale=0.92]{Fira Sans}
\setmainfont[Ligatures=TeX, BoldFont=Fira Sans Medium,Scale=0.92]{Fira Sans}
\setmonofont[Scale=0.92]{Fira Mono}

\definecolor{MedRed}{HTML}{AA3939}
\definecolor{BlueTeal}{HTML}{407F7F}
\definecolor{LightRed}{HTML}{D46A6A}
\colorlet{recipe-accent-1}{LightRed}
\colorlet{recipe-accent-2}{BlueTeal}
\colorlet{recipe-accent-3}{MedRed}

\RequirePackage{fontawesome}
\RequirePackage{shapepar}
\renewcommand{\rcAuthorSymbol}{\faPencil}
\renewcommand{\rcClockSymbol}{\faClockO}
\renewcommand{\rcServingSymbol}{\faCutlery}

\setlist*[itemize]{label=\faAngleDoubleRight}

\titleformat{\section}{\color{recipe-accent-3}\sffamily\LARGE}{\thesection}{0pt}{}[\vskip-1.25em\rule{\textwidth}{.2ex}\vskip-1em]
\titleformat*{\subsection}{\color{recipe-accent-3}\sffamily\large\itshape}

\RequirePackage{ragged2e}
\renewcommand{\maketitle}{
{\color{recipe-accent-3}\raggedright\Huge\sffamily\bfseries\@title\par%
\rule{\textwidth}{0.25ex}}
\bigskip

\vfill
{\raggedright\Large\sffamily\@author\par}
{\raggedright\large\sffamily\@date\par}
\thispagestyle{empty}
\setcounter{page}{0}
}

\RequirePackage{etoolbox}
\AtBeginEnvironment{quotation}{{\huge\color{recipe-accent-2}\faQuoteLeft}\vspace*{-1.5\baselineskip}\itshape}
